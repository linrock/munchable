= javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=false'
:javascript
  var restaurants = #{@restaurants_serialized};
  var x = 37.75;
  var y = -122.40;
  var zoom = 12;
= javascript_include_tag 'loader.js'
  
#map_canvas{:style => "width: 500px; height: 500px;"}
#info
  %table.tablesorter#restaurant_table
    %thead
      %tr
        %th
          %b Name
        %th
          %b Categories
        %th
          %b Rating
        %th
          %b Coordinates
    %tbody
      - for restaurant in @restaurants
        %tr
          %td= link_to restaurant.name, restaurant_url(:id => restaurant.id)
          %td= restaurant.categories
          %td #{restaurant.rating} (#{restaurant.review_count} reviews)
          %td #{restaurant.x}, -#{restaurant.y}
  %br/

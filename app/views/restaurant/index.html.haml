:css
  #map_canvas {
    width: 500px;
    height: 500px;
    margin: auto;
  }

  h1.title {
    text-align: center;
    margin-bottom: 30px;
  }

  #restaurant_table{
    margin: 10px auto;
  }

= javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=true'
:javascript
  var restaurants = #{@restaurants_serialized};
  
%h1.title Sample Restaurant App
#map_canvas{:style => "width: 500px; height: 500px;"}

#info
  %table.tablesorter#restaurant_table
    %thead
      %tr
        %th
          %b Name
        %th
          %b Website
        %th
          %b Categories
        %th
          %b Rating
        %th
          %b Coordinates
    %tbody
      - for restaurant in @restaurants
        %tr
          %td= restaurant.title
          %td= link_to restaurant.url
          %td= restaurant.categories
          %td= "#{restaurant.rating} (#{restaurant.review_count} reviews)"
          %td= restaurant.coordinates
  %br/

= javascript_include_tag 'loader.js'

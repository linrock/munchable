!!!
%html
  %head
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/style.css', :media => 'screen'
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = javascript_include_tag 'jquery.tablesorter.min.js'
    = javascript_include_tag 'jquery-ui-1.8.5.custom.min.js'

  %body.bp
    %h1#title= link_to 'Most Munchable', root_url
    #container
      #navbar
        - if user_signed_in?
          = link_to 'Your Profile', user_profile_url(:id => current_user.id)
          #{current_user.email}
          &nbsp;-&nbsp;
          = link_to 'Logout', destroy_user_session_url
        - else
          = link_to 'Login', new_user_session_url
          &nbsp;-&nbsp;
          = link_to 'Create Account', new_user_registration_url
        %br/
        = link_to 'San Francisco', location_url(:id => 1)
        &nbsp;-&nbsp;
        = link_to 'Mountain View', location_url(:id => 2)

      #notices
        - if flash[:notice]
          .notice= flash[:notice]
        - if flash[:alert]
          .alert= flash[:alert]
      .clear
      %br/
      =yield

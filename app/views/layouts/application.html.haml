!!!
%html
  %head
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = stylesheet_link_tag :all
    :css
      #container {
        margin: 0 auto;
        width: 70%;
      }
      #map_canvas {
        width: 500px;
        height: 500px;
        margin: auto;
      }
      h1#title {
        text-align: center;
        margin-bottom: 30px;
      }
      #navbar {
        text-align: center;
      }
      #restaurant_table{
        margin: 10px auto;
      }
      #search {
        padding: 10px;
        text-align: center;
      }
      .centered {
        width: 800px;
        margin: 0 auto;
      }
      .comment {
        color: grey;
        padding-left: 20px;
      }
      .green {
        color: green;
        font-weight: bold;
      }
      .yellow {
        color: orange;
        font-weight: bold;
      }
      .red {
        color: red;
        font-weight: bold;
      }
    = javascript_include_tag :all

  %body.bp
    %h1#title= link_to 'Most Munchable', root_url
    #container
      -#
        #navbar
          - if user_signed_in?
            = link_to 'Logout', destroy_user_session_url
          - else
            = link_to 'Login', new_user_session_url
            &nbsp;-&nbsp;
            = link_to 'Create Account', new_user_url
      #notices
        - if flash[:notice]
          .notice= flash[:notice]
        - if flash[:alert]
          .alert= flash[:alert]
      .clear
      %br/
      =yield
